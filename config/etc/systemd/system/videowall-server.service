[Unit]
Description=VideoWall server
After=network.target

[Service]
Type=simple
User=nobody
EnvironmentFile=-/etc/default/videowall-server
EnvironmentFile=-/tmp/videowall-server
ExecStart=/usr/local/bin/videowall-server ${VIDEO_LENGTH} ${BROADCAST_IP} ${BROADCAST_PORT}
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
